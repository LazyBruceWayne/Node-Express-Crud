<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>	
		
<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/users/edit/<%= id %>" method="post" name="form1">

<div class="col-md-6">
<div class="form-group">
    <label for="exampleInputEmail1">Name</label>
	<input type="text" name="name" id="name" value="<%= name %>" class="form-control" />
    
    <small id="emailHelp" class="form-text text-muted">Please Enter Name</small>
  </div>
  </div>
<div class="col-md-6">
  <div class="form-group">
    <label for="exampleInputEmail1">Age</label>
	<input type="text" name="age" value="<%= age %>" class="form-control"/>
	
    
    <small id="emailHelp" class="form-text text-muted">Please Enter Age</small>
  </div>
  </div>
  <div class="col-md-6">
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
	
	<input type="text" name="email" value="<%= email %>" class="form-control"/>
    
    <small id="emailHelp" class="form-text text-muted">Please Enter Email</small>
  </div>
  </div>
  <div class="col-md-12">
  <div class="form-group" align="center">
  <input type="submit" name="Submit" class="btn btn-success" value="Edit" />
   
  <input type="hidden" name="_method" value="PUT" />
  </div>
  
  </div>

</form>

<!--
including footer content which is common for all pages
-->
